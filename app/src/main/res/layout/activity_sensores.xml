<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    tools:context=".ActivitySensores">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="LUMINOSIDADE"
        android:text="@string/sensor_luminosidade"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="PROXIMIDADE"
        android:text="@string/sensor_proximidade"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="LOCALIZAR"
        android:text="@string/localizacao"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="UMIDADETEMPERATURA"
        android:text="@string/umidade"/>

</LinearLayout>